<h1><%= t('crud.index', resource: Task.model_name.human) %></h1>
<%= link_to t('buttons.new'), new_task_path %>
<%= render 'sort_tasks', q: @q %>
<%= link_to t('buttons.show_all'), tasks_path%>
<table>
  <thead>
    <tr>
      <td><%= sort_link(@q, :priority, t('activerecord.attributes.task.priority'), default_order: :asc) %></td>
      <td>
        <%= sort_link(@q, :end_at, t('activerecord.attributes.task.end_at'), default_order: :asc) %>
      </td>
      <%= content_tag :td, t('activerecord.attributes.task.status') %>
      <%= content_tag :td, t('activerecord.attributes.task.title') %>
      <%= content_tag :td, t('activerecord.attributes.task.description') %>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td ><%= t("activerecord.attributes.task/priorities.#{task.priority}") %></td>
      <td ><%= task.end_at.strftime('%Y-%m-%d %H:%M') %></td>
      <td ><%= task.status %></td>
      <td ><%= task.title %></td>
      <td ><%= task.description %></td>
      <td >
        <%= link_to t('buttons.edit'), edit_task_path(task) %> 
        <%= link_to t('buttons.destroy'),task_path(task), method: "delete", data: { confirm: t('message.confirm') } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>