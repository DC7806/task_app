<%= form_for task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :end_at %>
  <%= f.datetime_select :end_at %>
  <%= f.submit t('buttons.submit') %>
  <%= link_to t('buttons.cancel'), tasks_path %>
<% end %>